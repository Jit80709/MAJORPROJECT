<% layout("layouts/boilerplate") %>

<style>
  .smart-header {
    text-align: center;
    margin: 2rem 0;
  }

  .smart-header h2 {
    font-weight: 600;
  }

  .smart-header p {
    color: #6c757d;
    font-size: 0.95rem;
  }

  .smart-img {
    height: 250px;
    object-fit: cover;
    width: 100%;
    border-radius: 0.5rem;
  }

  .recommend-badge {
    display: inline-block;
    background: #eef3ff;
    color: #3b5bdb;
    font-size: 0.75rem;
    padding: 4px 8px;
    border-radius: 6px;
    margin-bottom: 6px;
  }

  .match-score {
    font-size: 0.8rem;
    color: #ff385c;
    font-weight: 500;
    margin-left: 8px;
  }

  .empty-state {
    text-align: center;
    margin: 4rem 0;
  }
</style>

<!-- AI HEADER -->
<div class="smart-header">
  <h2> Smart Recommendations</h2>
  <p>
    Based on your booking history, preferred categories and price range.
  </p>
</div>

<% if (Array.isArray(recommendations) && recommendations.length > 0) { %>

  <div class="row row-cols-1 row-cols-md-3 g-4">

    <% recommendations.forEach(listing => { %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0">

          <!-- Image -->
          <img src="<%= listing.image || '/images/default.jpg' %>" 
               class="card-img-top smart-img" 
               alt="<%= listing.title %>">

          <div class="card-body">

            <!-- WHY RECOMMENDED -->
            <span class="recommend-badge">
              <%= listing.reason %>
            </span>

            <!-- Title + Match Score -->
            <h5 class="card-title">
              <%= listing.title %>
              <span class="match-score">
                ðŸ”¥ <%= listing.matchScore %>% Match
              </span>
            </h5>

            <!-- Location -->
            <p class="card-text text-muted">
              <i class="bi bi-geo-alt"></i> <%= listing.location %>
            </p>

            <!-- Price -->
            <p class="card-text fw-bold">
              â‚¹<%= Number(listing.price).toLocaleString("en-IN") %> / night
            </p>

            <!-- Button -->
            <a href="/listings/<%= listing._id %>" 
               class="btn btn-sm btn-primary">
               View Listing
            </a>

          </div>
        </div>
      </div>
    <% }); %>

  </div>

<% } else { %>

  <!-- Empty State -->
  <div class="empty-state">
    <h4>No Smart Recommendations Yet</h4>
    <p class="text-muted">
      Start booking listings to unlock personalized AI suggestions.
    </p>
  </div>

<% } %>